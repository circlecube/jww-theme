{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "jww/band-list",
    "version": "1.0.0",
    "title": "Band List",
    "category": "media",
    "icon": "groups",
    "description": "Display all artists/bands with featured images and titles.",
    "keywords": [
        "band",
        "artist",
        "bands",
        "artists"
    ],
    "textdomain": "jww-theme",
    "editorScript": "file:../../build/index.js",
    "editorStyle": "file:../../build/index.css",
    "style": "file:../../build/style-index.css",
    "render": "file:./render.php",
    "supports": {
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "padding": true,
            "margin": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "showTitle": {
            "type": "boolean",
            "default": true
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "titleLevel": {
            "type": "number",
            "default": 2
        },
        "showDates": {
            "type": "boolean",
            "default": false
        }
    }
}