{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "jww/song-live-stats",
    "version": "1.0.0",
    "title": "JWW Song Live Statistics",
    "category": "media",
    "icon": "chart-bar",
    "description": "Display live performance statistics for a song (play count, last played, first played, recent shows).",
    "keywords": [
        "song",
        "statistics",
        "stats",
        "live",
        "performance",
        "shows"
    ],
    "textdomain": "jww-theme",
    "editorScript": "file:../../build/index.js",
    "editorStyle": "file:../../build/index.css",
    "style": "file:../../build/style-index.css",
    "render": "file:./render.php",
    "supports": {
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "padding": true,
            "margin": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "statType": {
            "type": "string",
            "default": "play_count",
            "enum": [
                "play_count",
                "last_played",
                "first_played",
                "days_since"
            ]
        },
        "songId": {
            "type": "number",
            "default": 0
        }
    }
}