{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "jww/song-list",
    "version": "1.0.0",
    "title": "Song List",
    "category": "media",
    "icon": "playlist-audio",
    "description": "Display songs in alphabetical, chronological, cover song, or grid format with optional artist filtering and section headers.",
    "keywords": [
        "song",
        "songs",
        "music",
        "playlist",
        "alphabetical",
        "chronological",
        "covers",
        "grid"
    ],
    "textdomain": "jww-theme",
    "editorScript": "file:../../build/index.js",
    "editorStyle": "file:../../build/index.css",
    "style": "file:../../build/style-index.css",
    "render": "file:./render.php",
    "supports": {
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "padding": true,
            "margin": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "listType": {
            "type": "string",
            "default": "alphabetical",
            "enum": ["alphabetical", "chronological", "covers", "grid"]
        },
        "artistId": {
            "type": "string",
            "default": ""
        },
        "showHeaders": {
            "type": "boolean",
            "default": true
        }
    }
}

